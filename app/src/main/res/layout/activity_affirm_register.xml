<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.AffirmRegisterActivity">

    <EditText
        android:hint="请输入密码"
        android:id="@+id/et_aff_reg_psw"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:hint="请确认密码"
        app:layout_constraintTop_toBottomOf="@id/et_aff_reg_psw"
        android:id="@+id/et_aff_reg_confirm_psw"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="注册"
        android:background="@drawable/bg_btn_login_true"
        android:id="@+id/btn_aff_reg"
        app:layout_constraintTop_toBottomOf="@id/et_aff_reg_confirm_psw"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>