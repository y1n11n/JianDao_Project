<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.youth.banner.Banner
        android:id="@+id/banner_news"
        app:indicator_height="0dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header_banner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#55000000"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_WHITE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/banner_news" />

    <com.example.seethewayproject.home.view.Banner_Indicator
        android:id="@+id/ban_indicator"
        app:layout_constraintTop_toBottomOf="@id/banner_news"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>