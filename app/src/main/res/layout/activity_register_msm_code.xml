<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.RegisterMSMCodeActivity">

    <ImageView
        android:id="@+id/iv_login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_reg_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_logo_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_reg_phone_num"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:hint="请输入手机号"
        app:layout_constraintTop_toBottomOf="@id/iv_reg_logo"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_reg_verified"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:hint="请输入验证码"
        app:layout_constraintTop_toBottomOf="@id/et_reg_phone_num"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_reg_send_verfied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        app:layout_constraintBottom_toBottomOf="@id/et_reg_verified"
        app:layout_constraintRight_toRightOf="@id/et_reg_verified"
        app:layout_constraintTop_toTopOf="@id/et_reg_verified"
        tools:ignore="MissingConstraints" />



    <Button
        android:id="@+id/btn_regist_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_btn_login_true"
        android:text="下一步"
        android:textColor="@color/color_WHITE"
        app:layout_constraintTop_toBottomOf="@id/et_reg_verified"
        tools:ignore="MissingConstraints" />

    <TextView
        android:text="验证码登录"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/btn_regist_next"
        android:id="@+id/tv_go_sms_login"
        app:layout_constraintLeft_toLeftOf="@id/btn_regist_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <TextView
        android:text="密码登录"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/btn_regist_next"
        android:id="@+id/tv_go_psw_login"
        app:layout_constraintRight_toRightOf="@id/btn_regist_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>